<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0"> 
      
  <servlet>
   <display-name>Jyro Servlet</display-name>
   <servlet-name>JyroAPI</servlet-name>
   <servlet-class>org.koiroha.jyro.webapp.JyroServlet</servlet-class>
   <init-param>
     <param-name>jyro.home</param-name>
     <param-value>WEB-INF/jyro</param-value>
   </init-param>
   <load-on-startup>1</load-on-startup>
 </servlet>

 <servlet-mapping>
   <servlet-name>JyroAPI</servlet-name>
   <url-pattern>/api/*</url-pattern>
 </servlet-mapping>

</web-app>